<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GithubApp" parent="Base.Theme.GithubApp" />

    <style name="ToolbarTitle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text" />

    <style name="Text.Option">
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Headline">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Text.Headline.Four">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Headline.Six">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Description">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Description.Short">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Image"/>

    <style name="Image.Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>